---
import { getEntry } from 'astro:content'
import Section from './Section.astro'

const skillsEntry = await getEntry('skills', 'data')
const categories = skillsEntry?.data?.categories || [];
---

<Section id="skills" class="skills-section">
  <div class="section-header">
    <h2 class="section-title">Skills & Expertise</h2>
    <div class="title-underline"></div>
  </div>

  <div class="skills-grid">
    {
      categories.map((category) => (
        <div class="skill-category reveal reveal-stagger">
          <h3 class="category-name">{category.name}</h3>
          <ul class="skill-list">
            {category.items.map((item) => (
              <li class="skill-item">
                <span class="skill-pill">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Section>

<style lang="scss">
  @use "../styles/mixins" as *;

  .skills-section {
    background-color: var(--color-surface);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-sm);
  }

  .title-underline {
    width: 4rem;
    height: 0.25rem;
    background-color: var(--color-primary);
    margin: 0 auto;
    border-radius: 0.125rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2xl);

    @include tablet {
      grid-template-columns: repeat(2, 1fr);
    }

    @include desktop {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .skill-category {
    padding: var(--spacing-xl);
    background-color: var(--color-surface);
    backdrop-filter: blur(0.625rem);
    border: 0.0625rem solid var(--color-border);
    border-radius: 1.5rem;
    box-shadow: 0 0.5rem 2rem var(--color-shadow);
    transition:
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      box-shadow 0.3s ease;

    &:hover {
      transform: translateY(-0.75rem);
      box-shadow: 0 0.9375rem 2.8125rem var(--color-shadow);
    }
  }

  .category-name {
    font-size: var(--font-size-base);
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .skill-pill {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-lg);
    background-color: var(--color-bg);
    border: 0.0625rem solid var(--color-border);
    border-radius: 5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    transition: all 0.25s ease;

    &:hover {
      background-color: var(--color-primary);
      color: var(--color-bg);
      border-color: var(--color-primary);
      transform: scale(1.05);
    }
  }
</style>
