---
import { getEntry } from "astro:content"

const personalEntry = await getEntry("personal", "data")
const socials = personalEntry?.data?.socials || [];
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="social-links">
      {
        socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="social-bubble"
          >
            <span class="platform-name">{social.platform}</span>
          </a>
        ))
      }
    </div>
    <div class="footer-credits">
      <p>
        &copy; {new Date().getFullYear()}
        {personalEntry?.data?.name}. Build with Astro.
      </p>
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../styles/mixins" as *;

  .site-footer {
    padding: var(--spacing-xl) var(--spacing-lg);
    background-color: var(--color-surface);
    /* stylelint-disable-next-line unit-disallowed-list */
    border-top: 2px solid var(--color-border);
    margin-top: auto;
  }

  .footer-content {
    max-width: 87.5rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .social-bubble {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 6rem;
    height: 3rem;
    border-radius: 1.5rem; /* Pill shape */
    background-color: var(--color-primary);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    /* stylelint-disable-next-line unit-disallowed-list */
    border: 2px solid var(--color-border);
    transition:
      transform 0.3s ease,
      background-color 0.3s ease;

    &:hover {
      transform: translateY(-0.25rem);
      background-color: var(--color-accent);
    }
  }

  .footer-credits {
    text-align: center;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    font-family: var(--font-body);
  }
</style>
