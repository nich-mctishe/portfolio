---
import { getEntry } from 'astro:content'
import Section from './Section.astro'

const highlightsEntry = await getEntry('highlights', 'data')
const clients = highlightsEntry?.data?.clients || [];
---

<Section id="highlights" class="highlights-section">
  <div class="section-header">
    <h2 class="section-title">Global Client Highlights</h2>
    <div class="title-underline"></div>
  </div>

  <div class="clients-grid">
    {
      clients.map((client) => (
        <div class="client-card reveal reveal-stagger">
          <div class="client-logo-placeholder">
            <span class="client-name">{client.name}</span>
          </div>
        </div>
      ))
    }
  </div>
</Section>

<style lang="scss">
  @use "../styles/mixins" as *;

  .highlights-section {
    background-color: var(--color-surface);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-4xl);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-sm);
  }

  .title-underline {
    width: 4rem;
    height: 0.25rem;
    background-color: var(--color-primary);
    margin: 0 auto;
    border-radius: 0.125rem;
  }

  .clients-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);

    @include tablet {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-xl);
    }

    @include desktop {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .client-card {
    aspect-ratio: 3 / 2;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-surface);
    backdrop-filter: blur(0.5rem);
    border: 0.0625rem solid var(--color-border);
    border-radius: 1rem;
    padding: var(--spacing-md);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: grayscale(1);
    opacity: 0.8;
    box-shadow: 0 0.25rem 0.9375rem var(--color-shadow);

    &:hover {
      filter: grayscale(0);
      opacity: 1;
      transform: translateY(-0.5rem) scale(1.05);
      border-color: var(--color-primary);
      box-shadow: 0 0.625rem 1.5625rem var(--color-shadow);
      background-color: var(--color-bg);
    }
  }

  .client-name {
    font-size: 0.75rem;
    font-weight: 700;
    text-align: center;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;

    .client-card:hover & {
      color: var(--color-primary);
    }
  }
</style>
