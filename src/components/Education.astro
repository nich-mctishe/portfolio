---
import { getEntry } from 'astro:content'
import Section from './Section.astro'

const educationEntry = await getEntry('education', 'data')
const qualifications = educationEntry?.data?.qualifications || [];
---

<Section id="education" class="education-section">
  <div class="section-header">
    <h2 class="section-title">Education</h2>
    <div class="title-underline"></div>
  </div>

  <div class="education-grid">
    {
      qualifications.map((edu) => (
        <div class="education-card reveal reveal-stagger">
          <h3 class="degree">{edu.degree}</h3>
          <p class="institution">{edu.institution}</p>
          <span class="year">{edu.year}</span>
        </div>
      ))
    }
  </div>
</Section>

<style lang="scss">
  @use "../styles/mixins" as *;

  .education-section {
    background-color: var(--color-bg);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-sm);
  }

  .title-underline {
    width: 4rem;
    height: 0.25rem;
    background-color: var(--color-primary);
    margin: 0 auto;
    border-radius: 0.125rem;
  }

  .education-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    max-width: 50rem;
    margin: 0 auto;

    @include tablet {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .education-card {
    background-color: var(--color-surface);
    backdrop-filter: blur(0.625rem);
    border: 0.0625rem solid var(--color-border);
    border-radius: 1.5rem;
    padding: var(--spacing-2xl) var(--spacing-xl);
    text-align: center;
    box-shadow: 0 0.25rem 1.25rem var(--color-shadow);
    transition:
      transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      box-shadow 0.3s ease;

    &:hover {
      transform: scale(1.05);
      box-shadow: 0 0.625rem 1.875rem var(--color-shadow);
    }
  }

  .degree {
    font-size: var(--font-size-base);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .institution {
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 500;
    margin-bottom: var(--spacing-md);
  }

  .year {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-text-muted);
    font-family: var(--font-body);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
