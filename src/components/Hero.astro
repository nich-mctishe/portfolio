---
import { getEntry } from 'astro:content'
import Section from './Section.astro'

const personalEntry = await getEntry('personal', 'data')
const personal = personalEntry?.data || { name: 'Name', title: 'Title' };
---

<Section id="hero" class="hero-section">
  <div class="hero-content">
    <div class="text-wrapper">
      <h2 class="greeting">Hi, I'm</h2>
      <h1 class="name">{personal.name}</h1>
      <p class="role">{personal.title}</p>
      <div class="cta-wrapper">
        <a href="#experience" class="cta-button">View My Work</a>
      </div>
    </div>

    <div class="visual-wrapper">
      <div class="bubble bubble-1"></div>
      <div class="bubble bubble-2"></div>
      <div class="bubble bubble-3"></div>
      <div class="bubble-large"></div>
    </div>
  </div>
</Section>

<style lang="scss">
  @use "../styles/mixins" as *;

  .hero-section {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    background: radial-gradient(
      circle at 70% 30%,
      var(--color-surface) 0%,
      var(--color-bg) 100%
    );
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
    position: relative;
    z-index: 10;

    @include tablet {
      grid-template-columns: 1.2fr 0.8fr;
    }
  }

  .greeting {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .name {
    font-size: clamp(3rem, 8vw, 5rem);
    line-height: 0.9;
    margin-bottom: var(--spacing-md);
    font-weight: 700;
  }

  .role {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    font-family: var(--font-body);
    margin-bottom: var(--spacing-2xl);
    max-width: 35rem;
  }

  .cta-button {
    display: inline-block;
    padding: var(--spacing-md) var(--spacing-3xl);
    background-color: var(--color-primary);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    border-radius: 5rem;
    box-shadow: 0 0.625rem 1.25rem var(--color-shadow);
    transition:
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      background-color 0.3s ease;

    &:hover {
      transform: translateY(-0.5rem) scale(1.02);
      background-color: var(--color-accent);
    }
  }

  .visual-wrapper {
    position: relative;
    height: 25rem;
    display: flex;
    justify-content: center;
    align-items: center;

    @include tablet {
      height: 40rem;
    }
  }

  .bubble-large {
    width: 18rem;
    height: 18rem;
    border-radius: 50%;
    background-color: var(--color-primary);
    border: 0.0625rem solid #ffffff33;
    box-shadow: inset 0 0 2.5rem #0000001a;
    animation: float 12s ease-in-out infinite;
    filter: blur(0.0625rem);

    @include tablet {
      width: 25rem;
      height: 25rem;
    }
  }

  .bubble {
    position: absolute;
    border-radius: 50%;
    border: 0.0625rem solid #ffffff4d;
    backdrop-filter: blur(0.25rem);
    box-shadow: inset 0 0 1.25rem #ffffff33;
  }

  .bubble-1 {
    width: 6rem;
    height: 6rem;
    top: -5%;
    left: 10%;
    background-color: var(--color-surface);
    animation: float 8s ease-in-out infinite;
  }

  .bubble-2 {
    width: 8rem;
    height: 8rem;
    bottom: 5%;
    right: 5%;
    background-color: var(--color-surface);
    animation: float 14s ease-in-out infinite reverse;
  }

  .bubble-3 {
    width: 4rem;
    height: 4rem;
    top: 40%;
    right: -10%;
    background-color: var(--color-surface);
    animation: float 10s ease-in-out infinite 2s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }

    33% {
      transform: translate(2rem, -2rem) rotate(5deg);
    }

    66% {
      transform: translate(-1.5rem, 2rem) rotate(-5deg);
    }
  }
</style>
