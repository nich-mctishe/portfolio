---
interface Props {
  id?: string;
  class?: string;
  isFullWidth?: boolean;
}

const { id, class: className, isFullWidth = false } = Astro.props;
---

<section
  id={id}
  class:list={["section", className, { "full-width": isFullWidth }]}
>
  <div class="container">
    <slot />
  </div>
</section>

<style lang="scss">
  @use "../styles/mixins" as *;

  .section {
    padding: var(--spacing-4xl) 0;
    overflow: hidden;

    @include tablet {
      padding: var(--spacing-4xl) 0;
    }
  }

  .container {
    width: 100%;
    max-width: 87.5rem; // 1400px
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .full-width {
    .container {
      max-width: none;
      padding: 0;
    }
  }
</style>
