---
import { getEntry } from 'astro:content'
import ThemeToggle from './ThemeToggle.astro'

const personalEntry = await getEntry('personal', 'data')
const personal = personalEntry?.data || { name: 'Name', title: 'Title' }

const navItems = [
  { label: 'Skills', href: '#skills' },
  { label: 'Work', href: '#experience' },
  { label: 'Edu', href: '#education' },
  { label: 'Clients', href: '#highlights' },
];
---

<header class="site-header">
  <div class="header-content">
    <div class="brand">
      <div class="brand-circle"></div>
      <div class="brand-text">
        <h1 class="name">{personal.name}</h1>
        <p class="title">{personal.title}</p>
      </div>
    </div>

    <div class="controls">
      <nav class="bubble-nav" aria-label="Main Navigation">
        <button class="hamburger" aria-label="Open Menu" aria-expanded="false">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
        <ul class="nav-list">
          {
            navItems.map((item) => (
              <li>
                <a href={item.href} class="nav-bubble">
                  <span class="nav-label">{item.label}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/mixins" as *;

  .site-header {
    padding: var(--spacing-md) var(--spacing-lg);
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-surface);
    backdrop-filter: blur(0.75rem);
    border-bottom: 0.0625rem solid var(--color-border);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 90rem;
    margin: 0 auto;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;

    &:hover {
      opacity: 0.8;
    }
  }

  .brand-circle {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: var(--color-primary);
    border: 0.0625rem solid #ffffff33;
    box-shadow: 0 0.25rem 0.625rem var(--color-shadow);
  }

  .brand-text {
    display: flex;
    flex-direction: column;
  }

  .name {
    font-size: var(--font-size-lg);
    font-weight: 700;
    margin: 0;
    line-height: 1;
  }

  .title {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
    font-family: var(--font-body);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .bubble-nav {
    display: flex;
    align-items: center;
  }

  .hamburger {
    display: block;
    width: 2rem;
    height: 2rem;
    position: relative;
    z-index: 110;

    @include tablet {
      display: none;
    }

    .hamburger-line {
      display: block;
      width: 100%;
      height: 0.125rem;
      background-color: var(--color-text);
      margin: 0.375rem 0;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease;
    }
  }

  .nav-list {
    display: none; // Hidden on mobile by default
    flex-direction: column;
    position: absolute;
    top: 100%;
    right: 0;
    background-color: var(--color-surface);
    padding: var(--spacing-lg);
    border: 0.0625rem solid var(--color-border);
    border-right: none;
    border-top: none;
    gap: var(--spacing-md);
    backdrop-filter: blur(1.25rem);

    /* stylelint-disable-next-line selector-pseudo-class-no-unknown */
    :global(nav.is-open) & {
      display: flex;
    }

    @include tablet {
      display: flex;
      flex-direction: row;
      position: static;
      background: transparent;
      border: none;
      padding: 0;
      backdrop-filter: none;
    }

    li {
      @for $i from 1 through 5 {
        &:nth-child(#{$i}) .nav-bubble {
          animation-delay: #{$i * 0.1}s;
        }
      }
    }
  }

  .nav-bubble {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background-color: var(--color-accent);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: 700;
    font-size: var(--font-size-xs);
    border: 0.0625rem solid #ffffff33;
    box-shadow: 0 0.25rem 0.9375rem var(--color-shadow);
    animation: nav-float 6s ease-in-out infinite;
    transition:
      transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      background-color 0.3s ease,
      box-shadow 0.3s ease;

    &:hover {
      transform: translateY(-0.5rem) scale(1.1);
      box-shadow: 0 0.625rem 1.5625rem var(--color-shadow);
      animation-play-state: paused;
    }
  }

  @keyframes nav-float {
    0%,
    100% {
      transform: translateY(0) rotate(0);
    }

    50% {
      transform: translateY(-0.5rem) rotate(3deg);
    }
  }
</style>

<script>
class MobileNav {
  constructor() {
    const nav = document.querySelector('.bubble-nav')
    const btn = document.querySelector('.hamburger')

    if (btn && nav) {
      btn.addEventListener('click', () => {
        const isExpanded = btn.getAttribute('aria-expanded') === 'true'
        btn.setAttribute('aria-expanded', (!isExpanded).toString())
        nav.classList.toggle('is-open')
      })
    }
  }
}

new MobileNav()

document.addEventListener('astro:after-swap', () => {
  new MobileNav()
})
</script>
