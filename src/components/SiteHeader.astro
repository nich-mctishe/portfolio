---
import { getEntry } from "astro:content"
import ThemeToggle from "./ThemeToggle.astro"

const personalEntry = await getEntry("personal", "data")
const personal = personalEntry?.data || { name: "Name", title: "Title" }

const navItems = [
  { label: "Skills", href: "#skills" },
  { label: "Work", href: "#experience" },
  { label: "Edu", href: "#education" },
  { label: "Clients", href: "#highlights" },
];
---

<header class="site-header">
  <div class="header-content">
    <div class="brand">
      <div class="brand-circle"></div>
      <div class="brand-text">
        <h1 class="name">{personal.name}</h1>
        <p class="title">{personal.title}</p>
      </div>
    </div>

    <div class="controls">
      <nav class="bubble-nav" aria-label="Main Navigation">
        <button class="hamburger" aria-label="Open Menu" aria-expanded="false">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
        <ul class="nav-list">
          {
            navItems.map((item) => (
              <li>
                <a href={item.href} class="nav-bubble">
                  <span class="nav-label">{item.label}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/mixins" as *;

  .site-header {
    padding: var(--spacing-md) var(--spacing-lg);
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-bg);
    /* stylelint-disable-next-line unit-disallowed-list */
    border-bottom: 2px solid var(--color-border);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 87.5rem;
    margin: 0 auto;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    text-decoration: none;
    color: inherit;
  }

  .brand-circle {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background-color: var(--color-primary);
    /* stylelint-disable-next-line unit-disallowed-list */
    border: 2px solid var(--color-border);
  }

  .brand-text {
    display: flex;
    flex-direction: column;
  }

  .name {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin: 0;
  }

  .title {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
    font-family: var(--font-body);
  }

  .controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .bubble-nav {
    display: flex;
    align-items: center;
  }

  .hamburger {
    display: block;
    width: 2rem;
    height: 2rem;
    position: relative;
    z-index: 110;

    @include tablet {
      display: none;
    }

    .hamburger-line {
      display: block;
      width: 100%;
      height: 0.125rem;
      background-color: var(--color-text);
      margin: 0.375rem 0;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease;
    }
  }

  .nav-list {
    display: none; // Hidden on mobile by default
    flex-direction: column;
    position: absolute;
    top: 100%;
    right: 0;
    background-color: var(--color-surface);
    padding: var(--spacing-lg);
    /* stylelint-disable-next-line unit-disallowed-list */
    border: 2px solid var(--color-border);
    border-right: none;
    border-top: none;
    gap: var(--spacing-md);

    /* stylelint-disable-next-line selector-pseudo-class-no-unknown */
    :global(nav.is-open) & {
      display: flex;
    }

    @include tablet {
      display: flex;
      flex-direction: row;
      position: static;
      background: transparent;
      border: none;
      padding: 0;
    }
  }

  .nav-bubble {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background-color: var(--color-accent);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-xs);
    /* stylelint-disable-next-line unit-disallowed-list */
    border: 2px solid var(--color-border);
    transition:
      transform 0.3s ease,
      background-color 0.3s ease;

    &:hover {
      transform: translateY(-0.25rem) scale(1.05);
      background-color: var(--color-primary);
    }
  }
</style>

<script>
class MobileNav {
  constructor() {
    const nav = document.querySelector(".bubble-nav")
    const btn = document.querySelector(".hamburger")

    if (btn && nav) {
      btn.addEventListener("click", () => {
        const isExpanded = btn.getAttribute("aria-expanded") === "true"
        btn.setAttribute("aria-expanded", (!isExpanded).toString())
        nav.classList.toggle("is-open")
      })
    }
  }
}

new MobileNav()

document.addEventListener("astro:after-swap", () => {
  new MobileNav()
})
</script>
